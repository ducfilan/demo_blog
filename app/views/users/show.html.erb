<% provide(:tilte, @user.name) %>
<div class="row">
  <div class="col-md-4 user_action_wrapper">
		<div class="user_info user_info_wrapper">
      <div class="width_100per">
        <%= link_to gravartar_for(current_user), current_user %>
      </div>
		  <div class="info">
				<label>Name: </label> <%= @user.name %> <br>
				<label>Email: </label> <%= @user.email %>
		  </div>
		  <%= render "shared/stats" %>
		</div>
  </div>
  <div class="col-md-7">
    <h1>Post feed</h1>
    <%= render "follow_form" if logged_in? %>
    <ol class="microposts">
  		<%= render @microposts %>
    </ol>
	  	<%= will_paginate @microposts %>
  </div>
</div>
