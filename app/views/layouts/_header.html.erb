<header class="navbar navbar-default">
  <div id="banner_wrapper">
    <%= image_tag "banner.jpg" %>
  </div>
  <div class="container">
    <%= link_to "Geek Blog", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav">
        <li>
          <%= link_to root_path, title: "Home" do %>
              <span class="glyphicon glyphicon-home"></span>
              Home
          <% end %>
        </li>
        <li>
          <%= link_to static_pages_help_path, title: "Help" do %>
              <span class="glyphicon glyphicon-question-sign"></span>
              Help
          <% end %>
        </li>
        <li>
          <%= link_to users_path, title: "Users" do %>
              <span class="glyphicon glyphicon-user"></span>
              Users
          <% end %>
        </li>
      </ul>
      <ul class="nav navbar-nav pull-right">
        <% if logged_in? %>
            <li class="dropdown">
              <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                <div class="menu_avartar">
                  <%= gravartar_for current_user %>
                  <span class="caret"></span>
                </div>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to t("menu.profile"), user_path(current_user.id) %></li>
                <li><%= link_to t("menu.setting"), edit_user_path(current_user) %></li>
                <li role="separator" class="divider"></li>
                <li><%= link_to t("menu.logout"), logout_path, method: "delete" %></li>
              </ul>
            </li>
        <% else %>
            <div class="login_wrapper">
              <%= link_to "Login", login_path, class: "btn btn-default" %>
              <%= link_to "Signup", signup_path, class: "btn btn-primary" %>
            </div>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
